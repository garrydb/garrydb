<Window x:Class="GarryDB.Wpf.Host.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Garry DB" Height="450" Width="800"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
  <Border Cursor="AppStarting" BorderThickness="2,2,2,2" BorderBrush="Black">
    <Canvas Margin="10,10,10,10" x:Name="Canvas">
          <TextBlock Height="21" VerticalAlignment="Top" TextAlignment="Center" Text="{Binding Phase}" Width="800" Canvas.Top="250" />
          <TextBlock Height="21" VerticalAlignment="Top" TextAlignment="Center" Text="{Binding CurrentPlugin.Name}" Width="{Binding ActualWidth, ElementName=Canvas}" Canvas.Top="300" />
          <ProgressBar Minimum="0" Maximum="{Binding NumberOfPlugins}" Value="{Binding NumberOfPluginsLoaded}" Height="20" Width="{Binding ActualWidth, ElementName=Canvas}" Canvas.Top="356" />
      </Canvas>
  </Border>
</Window>
