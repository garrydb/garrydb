<Window x:Class="GarryDB.Wpf.Host.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Garry DB" Height="450" Width="800"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets/gr-stocks-Iq9SaJezkOE-unsplash.jpg" />
    </Window.Background>
    <Border Cursor="AppStarting" BorderThickness="2,2,2,2" BorderBrush="Black">
        <Canvas Margin="10,10,10,10" Background="Transparent">

            <TextBlock Height="21" TextAlignment="Center" Text="{Binding Phase}" Width="451" Canvas.Top="206"
                 Foreground="White" Canvas.Left="325" />
            <TextBlock Height="21" TextAlignment="Center" Text="{Binding CurrentPlugin.Name}" Width="451" Canvas.Top="232"
                 Canvas.Left="325" Foreground="White" />
            <Border Canvas.Top="258" Canvas.Left="325" BorderBrush="White" Height="20" Width="451" BorderThickness="1">
                <ProgressBar Minimum="0" Maximum="{Binding NumberOfSteps}" Value="{Binding CurrentStep}"
                     Foreground="White" BorderBrush="Transparent" Background="Transparent" Margin="2" />
            </Border>
        </Canvas>
    </Border>
</Window>